<div class="container">
    <br />

    <form action="/register/register" method="POST">
        <input type="hidden" name="_id" value="{{persona._id}}"/>
        <div class="form-group">
            <label for="firstName">First Name:</label>
            <input type="text" class="form-control" id="firstName" name="firstName" value="{{register.firstName}}">
        </div>
        <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input type="text" class="form-control" id="lastName" name="lastName" value="{{register.lastName}}">
        </div>
           <div class="form-group">
            <label for="lastName">Email:</label>
            <input type="email" class="form-control" id="email" name="email" value="{{register.email}}">
        </div>
        <div class="form-group">
            <label for="edad">Phone Number:</label>
            <input type="number" class="form-control" id="phoneNumber" name="phoneNumber" value="{{register.phoneNumber}}">
        </div>
         <div class="form-group">
            <label for="password">Password:</label>
            <input type="text" class="form-control" id="password" name="password" value="{{register.password}}">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/" class="btn btn-danger">Cancel</a>
    </form>
</div>